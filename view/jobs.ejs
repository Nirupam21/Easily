
<% if(locals.lastVisit) { %>
    <div class="alert alert-primary" role="alert">
        Your Last Visit was on : <%= locals.lastVisit %>
    </div>
<% } %>
<div class="card-container">
    <% jobs.forEach(job => { %>
        <div class="card">
            <div class="card-content">
                <h3><%= job.companyName %></h3>
                <p><%= job.jobCategory %></p><p><%= job.jobDesignation %></p>
                <p><%= job.jobLocation %></p>
                <p><%= job.salary %></p>
                <p><%= job.skillsRequired %></p>
                <a href="/jobs/<%= job.id %>" class="btn1">View Details</a>
            </div>
        </div>
    <% }) %>  
</div>

